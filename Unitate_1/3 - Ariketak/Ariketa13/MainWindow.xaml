<Window x:Class="Ariketa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 13 - Editor con menús" Height="400" Width="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="Salir" Click="Salir_Click"/>
            </MenuItem>

            <MenuItem Header="_Editar">
                <MenuItem Header="Cortar" InputGestureText="Ctrl+X" Click="Cortar_Click"/>
                <MenuItem Header="Copiar" InputGestureText="Ctrl+C" Click="Copiar_Click"/>
                <MenuItem Header="Pegar" InputGestureText="Ctrl+V" Click="Pegar_Click"/>
                <MenuItem Header="Eliminar" InputGestureText="Supr" Click="Eliminar_Click"/>
            </MenuItem>

            <MenuItem Header="_Fuente">
                <MenuItem Header="Arial" Click="Fuente_Click"/>
                <MenuItem Header="Courier New" Click="Fuente_Click"/>
                <MenuItem Header="Impact" Click="Fuente_Click"/>
                <MenuItem Header="Symbol" Click="Fuente_Click"/>
            </MenuItem>
        </Menu>

        <TextBox x:Name="txtEditor"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Margin="5"/>
    </DockPanel>
</Window>
