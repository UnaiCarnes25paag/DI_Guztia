<Window x:Class="Ariketa9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 9" Height="400" Width="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Amigo Nuevo:" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="txtAmigoNuevo" Width="200" Margin="0,0,5,0"/>
                <Button x:Name="btnAñadir" Content="Añadir" Width="80" Click="btnAñadir_Click"/>
            </StackPanel>

            <TextBlock Text="Lista de Amigos:" Margin="5"/>
            <ListBox x:Name="listBoxAmigos" Height="120" Margin="5"
                     MouseDoubleClick="listBoxAmigos_DoubleClick"/>

            <TextBlock Text="Amigo Seleccionado:" Margin="5"/>
            <TextBox x:Name="txtAmigoSeleccionado" Margin="5" IsReadOnly="True"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="btnEliminar" Content="Eliminar" Width="100" Margin="5" Click="btnEliminar_Click"/>
            <Button x:Name="btnLimpiar" Content="Limpiar" Width="100" Margin="5" Click="btnLimpiar_Click"/>
            <Button x:Name="btnSalir" Content="Salir" Width="100" Margin="5" Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
