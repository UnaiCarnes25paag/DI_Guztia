<Window x:Class="Ariketa3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario" Height="250" Width="350">
    <StackPanel Margin="20">
        <Label x:Name="lblNumero" Content="Numero 1" FontSize="16"/>
        <TextBox x:Name="txtNumero" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnSiguiente" Content="Siguiente" Width="80" Margin="5" Click="btnSiguiente_Click"/>
            <Button x:Name="btnLimpiar" Content="Limpiar" Width="80" Margin="5" Click="btnLimpiar_Click"/>
            <Button x:Name="btnSalir" Content="Salir" Width="80" Margin="5" Click="btnSalir_Click"/>
        </StackPanel>
        <Label x:Name="lblResultado" Content="" FontSize="16" Margin="0,20,0,0" Visibility="Collapsed"/>
        <TextBox x:Name="txtResultado" IsReadOnly="True" Margin="0,5,0,0" Visibility="Collapsed"/>
    </StackPanel>
</Window>