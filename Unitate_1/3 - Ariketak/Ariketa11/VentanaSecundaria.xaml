<Window x:Class="Ariketa11.VentanaSecundaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Introducir datos" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Introduce tus datos:" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Nombre:" Width="100"/>
            <TextBox x:Name="txtNombre" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Apellido 1:" Width="100"/>
            <TextBox x:Name="txtApellido1" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Apellido 2:" Width="100"/>
            <TextBox x:Name="txtApellido2" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="DNI:" Width="100"/>
            <TextBox x:Name="txtDni" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Aceptar" Click="BtnAceptar_Click" Margin="5"/>
            <Button Content="Cargar y Visualizar" Click="BtnCargarVisualizar_Click" Margin="5"/>
            <Button Content="Salir" Click="BtnSalir_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
