<Window x:Class="Ariketa8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 8 - Fechas" Height="400" Width="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Ahora:" Margin="5"/>
            <TextBox x:Name="txtAhora" Margin="5" IsReadOnly="True"/>

            <TextBlock Text="Hoy:" Margin="5"/>
            <TextBox x:Name="txtHoy" Margin="5" IsReadOnly="True"/>

            <TextBlock Text="Hora de hoy:" Margin="5"/>
            <TextBox x:Name="txtHoraHoy" Margin="5" IsReadOnly="True"/>

            <TextBlock Text="Suma de fechas:" Margin="5"/>
            <TextBox x:Name="txtSumaFechas" Margin="5" IsReadOnly="True"/>

            <TextBlock Text="Diferencia de fechas:" Margin="5"/>
            <TextBox x:Name="txtDiferenciaFechas" Margin="5" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="btnEjecutar" Content="Ejecutar" Width="100" Margin="5" Click="btnEjecutar_Click"/>
            <Button x:Name="btnLimpiar" Content="Limpiar" Width="100" Margin="5" Click="btnLimpiar_Click"/>
            <Button x:Name="btnSalir" Content="Salir" Width="100" Margin="5" Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
