<Window x:Class="Ariketa11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualización de datos" Height="250" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Datos guardados:" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock x:Name="lblNombre" Margin="0,5"/>
        <TextBlock x:Name="lblApellido1" Margin="0,5"/>
        <TextBlock x:Name="lblApellido2" Margin="0,5"/>
        <TextBlock x:Name="lblDni" Margin="0,5"/>
    </StackPanel>
</Window>
