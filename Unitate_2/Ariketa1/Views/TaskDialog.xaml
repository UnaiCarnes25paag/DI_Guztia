<Window x:Class="TareasWpf.Views.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ataza"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="300" Width="400"
        Background="#f7f7f7">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Titulua:" Margin="0,0,0,4" FontWeight="Bold"/>
            <TextBox Text="{Binding Tarea.Titulua, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Text="Lehentasuna:" Margin="0,10,0,4" FontWeight="Bold"/>
            <ComboBox SelectedItem="{Binding Tarea.Lehentasuna}"
              ItemsSource="{Binding Lehentasunak}" />

            <TextBlock Text="Azken eguna:" Margin="0,10,0,4" FontWeight="Bold"/>
            <DatePicker SelectedDate="{Binding Tarea.AzkenEguna, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                DisplayDateStart="{x:Static sys:DateTime.Today}"
                xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <CheckBox IsChecked="{Binding Tarea.Egoera}" Content="Eginda" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ados" Width="80" Margin="5,0"
                    IsDefault="True"
                    Click="OnAccept_Click"/>
            <Button Content="Utzi" Width="80" Margin="5,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
