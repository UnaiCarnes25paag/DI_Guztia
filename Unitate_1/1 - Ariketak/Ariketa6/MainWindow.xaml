<Window x:Class="Ariketa6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ariketa - Intro Tekla" Height="250" Width="350">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Escribe un texto." 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="TextBox1" Margin="0,0,0,8" FontSize="16"/>
        <TextBox x:Name="TextBox2" Margin="0,0,0,8" FontSize="16"/>
        <TextBox x:Name="TextBox3" Margin="0,0,0,15" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="BtnLimpiar" Content="Limpiar" Width="80" Margin="0,0,10,0" Click="BtnLimpiar_Click"/>
            <Button x:Name="BtnSalir" Content="Salir" Width="80" Click="BtnSalir_Click"/>
        </StackPanel>
    </StackPanel>
</Window>