<Window x:Class="Ariketa1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Ariketa1.Views"
        xmlns:vm="clr-namespace:Ariketa1.ViewModels"
        Title="Eserlekuak erreserbatzeko sistema" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="SeatTemplate" DataType="{x:Type vm:SeatViewModel}">
            <views:SeatControl DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0">
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="Zona" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                <Expander Header="Autobusa" IsExpanded="True" Margin="0,0,0,8">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding BusSeats}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" Rows="10" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SeatTemplate}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Expander>

                <Expander Header="Trena" IsExpanded="False" Margin="0,0,0,8">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding TrainSeats}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" Rows="10" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SeatTemplate}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Expander>

                <Expander Header="Hegazkina" IsExpanded="False">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding PlaneSeats}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="6" Rows="20" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SeatTemplate}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Reserbak" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding Reservations}" DisplayMemberPath="SeatId" Height="400" />
            <Button Content="Gorde erreserbak" Click="BtnGuardar_Click" Margin="0,8,0,0"/>
            <Button Content="Kargatu" Click="BtnRecargar_Click" Margin="0,8,0,0"/>
            <Button Content="Ezabatu erreserba guztiak" Click="BtnBorrarTodo_Click" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>